<!DOCTYPE html>
<html>
  <head>
    <title>smaFin</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbolinks-track": "reload" %>
    <%= javascript_include_tag "application", "autocomplete-rails" %>
    
  </head>

  <body>
    <% if !(controller_name == "login" && action_name == "index") then %>
      <% if !(controller_name == "application" && action_name == "no_permissions") then %>
        <%= link_to "Carts", carts_path if has_permission("carts", "index") %>
        <%= link_to "Purchases", purchases_path if has_permission("purchases", "index") %>
        <%= link_to "Categories", categories_path if has_permission("categories", "index") %>
        <%= link_to "Subcategories", subcategories_path if has_permission("subcategories", "index") %>
        <%= link_to "Products", products_path if has_permission("products", "index") %>
        <%= link_to "Users", users_path if has_permission("users", "index") %>
        <%= link_to "Roles", roles_path if has_permission("roles", "index") %>
      <% end %>
      <%= link_to "Logout", :logout %>
    <% end %>
    <br/>
    <br/>
      <p id="notice"><%= notice %></p>
    <%= yield %>
    
    <br/>
    <br/>
    <% if !(controller_name == "login" && action_name == "index") then %>
      <% if !(controller_name == "application" && action_name == "no_permissions") then %>
        <%= link_to "ToggleHidden", :toggle_hidden %>
      <% end %>
    <% end %>

    <% if Rails.env.development? %>
      <hr/>
      <hr/>
      <pre>
        kontroler: <%= controller_name %>
        akcja: <%= action_name %>
      </pre>
    <% end %>

  </body>
</html>
